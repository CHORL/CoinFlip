<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainCoinFlip"
    android:weightSum="1"
    android:background="@drawable/background_wood"
    android:orientation="vertical"
    android:id="@+id/MainCoinLayout"
    android:gravity="top|clip_horizontal|center|clip_vertical|fill">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Flip A Coin"
        android:id="@+id/textView"
        android:layout_gravity="top|center_horizontal"
        android:textStyle="bold|italic"
        android:textColorLink="@color/abc_primary_text_disable_only_material_dark"
        android:textIsSelectable="false"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#fffdff73"
        android:textSize="50sp"
        android:editable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:onClick="buttonOnClick">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Coin"
            android:clickable="true"
            android:onClick="buttonOnClick"
            android:scaleType="centerInside"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp" />
    </LinearLayout>
    <!-- Just for display and to tell you what to do -->

</LinearLayout>