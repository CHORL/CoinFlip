<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Android.Project.coinflip" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".switcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait"> <!-- Made it so the application can not be turned -->
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" /><!--Made startup screen the first activity to be loaded -->
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainCoinFlip">
        </activity>

    </application>

</manifest>

